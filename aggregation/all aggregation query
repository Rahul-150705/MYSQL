to find total employees:
            select department,count(*) as total_employee from employees group by department;
to find average salary of all employee:
            select avg(salary) from employees; 
      to find average salary of each department :
                    select department,avg(salary) from employees group by department;
to get the min and maximum salary in the company:
            select min(salary),max(salary) from employees;
      to get min salary of each department:
                   select department,min(salary),max(salary) from employees group by department;
to count how many employees where hired in 2024:
            select count(*) as hired_2024 from employee where joindate>='2024-01-01';
            
              
